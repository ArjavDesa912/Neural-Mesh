# API Keys
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GOOGLE_API_KEY=your_google_key
COHERE_API_KEY=your_cohere_key

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_CLUSTER_MODE=false
REDIS_CLUSTER_NODES=[]

# Database
DATABASE_URL=postgresql://user:pass@localhost/inferenceflow

# Application Settings
LOG_LEVEL=INFO
MAX_WORKERS=10
CACHE_TTL=3600
SIMILARITY_THRESHOLD=0.85
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Multi-Modal Configuration
ENABLE_MULTI_MODAL=true
VISION_MODEL_NAME=openai/clip-vit-base-patch32
TEXT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_IMAGE_SIZE=1024
SUPPORTED_MODALITIES=["text", "image", "code"]

# Reinforcement Learning Configuration
ENABLE_RL_OPTIMIZATION=true
RL_LEARNING_RATE=0.01
RL_DISCOUNT_FACTOR=0.95
RL_EXPLORATION_RATE=0.1
RL_EXPLORATION_DECAY=0.995
RL_REWARD_THRESHOLD=0.8
RL_MODEL_PATH=models/rl_router.pkl

# Advanced Cache Configuration
ENABLE_SEMANTIC_CACHE=true
CACHE_MAX_SIZE=10000
CACHE_EVICTION_POLICY=rl_optimized
CACHE_COMPRESSION_ENABLED=true
CACHE_CLUSTER_REPLICATION=true
CACHE_REGIONS=["us-east-1", "us-west-1", "eu-west-1"]

# Provider Configuration
DEFAULT_MODEL=gpt-5
MAX_RETRIES=3
TIMEOUT_SECONDS=30
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring and Observability
PROMETHEUS_PORT=8000
GRAFANA_URL=http://localhost:3000
ENABLE_ADVANCED_METRICS=true
METRICS_RETENTION_HOURS=168
ENABLE_DISTRIBUTED_TRACING=true
TRACING_SAMPLE_RATE=0.1

# Alert Configuration
ENABLE_ALERTING=true
ALERT_WEBHOOK_URL=
ALERT_EMAIL_RECIPIENTS=[]
ALERT_SEVERITY_THRESHOLDS__INFO=0.7
ALERT_SEVERITY_THRESHOLDS__WARNING=0.5
ALERT_SEVERITY_THRESHOLDS__CRITICAL=0.3

# Performance Configuration
TARGET_P95_LATENCY=2.0
TARGET_CACHE_HIT_RATE=85.0
TARGET_ERROR_RATE=1.0
TARGET_SYSTEM_HEALTH=0.8
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=120

# Scaling Configuration
MIN_REPLICAS=3
MAX_REPLICAS=20
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80
ENABLE_PREDICTIVE_SCALING=true
SCALING_LOOKBACK_MINUTES=30
SCALING_PREDICTION_WINDOW=15

# Multi-Region Configuration
ENABLE_MULTI_REGION=true
PRIMARY_REGION=us-east-1
SECONDARY_REGIONS=["us-west-1", "eu-west-1"]
REGION_FAILOVER_ENABLED=true
CROSS_REGION_LATENCY_THRESHOLD=1.0

# Security Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENABLE_RATE_LIMITING=true
ENABLE_INPUT_VALIDATION=true
MAX_REQUEST_SIZE_MB=10

# Advanced Features
ENABLE_BATCH_PROCESSING=true
MAX_BATCH_SIZE=50
BATCH_TIMEOUT_SECONDS=5
ENABLE_STREAMING=true
ENABLE_REQUEST_DEDUPLICATION=true

# Cost Optimization
ENABLE_COST_OPTIMIZATION=true
COST_BUDGET_MONTHLY=1000.0
COST_ALERT_THRESHOLD=0.8
ENABLE_PROVIDER_COST_TRACKING=true
